<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:minHeight="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="In-app Billing Sample"
            android:textSize="24sp" />

        <Button
            android:id="@+id/queryPurchasesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Query Purchases" />

        <Button
            android:id="@+id/querySubscriptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Query Subscriptions" />

        <Button
            android:id="@+id/buyProduct01Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Buy Product01" />

        <Button
            android:id="@+id/consumeProduct01Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Consume Product01" />

        <Button
            android:id="@+id/buyProduct02Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Buy Product02" />

        <Button
            android:id="@+id/consumeProduct02Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Consume Product02" />

        <Button
            android:id="@+id/subscribeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:minWidth="200dp"
            android:text="Subscribe" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:minHeight="20dp" />
    </LinearLayout>
</ScrollView>